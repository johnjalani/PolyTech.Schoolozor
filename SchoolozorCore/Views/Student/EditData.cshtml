@model StudentViewModel
@{ ViewData["Title"] = "Students"; }
<div class="row">
    <div class="col-md-12">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Update Student</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" method="post" name="form">
                <div class="card-body">
                    <div class="hidden">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="StudentId" />
                        <input type="hidden" asp-for="CurrentAddress.Id" />
                        <input type="hidden" asp-for="PermanentAddress.Id" />
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="FirstName" data-type="toupper" placeholder="First Name">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" class="form-control" asp-for="MiddleName" data-type="toupper" placeholder="Middle Name">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" class="form-control" asp-for="LastName" data-type="toupper" placeholder="Last Name">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-at"></i></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="Email" data-type="email">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="Phone" data-type="phone">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-mobile"></i></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="Mobile" data-type="mobile">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-birthday-cake"></i></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="DOB" data-type="date">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <select class="form-control" asp-for="Gender">
                                    <option value="">Select Gender</option>
                                    <option value="0">Male</option>
                                    <option value="1">Female</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h5>
                        Current Address
                    </h5>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><small>Address</small></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="CurrentAddress.Address" data-type="toupper">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><small>City</small></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="CurrentAddress.City" data-type="toupper">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><small>Zip</small></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="CurrentAddress.Zip" data-type="zip">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-globe-asia"></i></span>
                                    </div>
                                    <select class="form-control" asp-for="CurrentAddress.Country" data-type="country" data-selectedValue="@Model.CurrentAddress.Country"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h5>
                        Permanent Address
                    </h5>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><small>Address</small></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="PermanentAddress.Address" data-type="toupper">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><small>City</small></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="PermanentAddress.City" data-type="toupper">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><small>Zip</small></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="PermanentAddress.Zip" data-type="zip">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-globe-asia"></i></span>
                                    </div>
                                    <select class="form-control" asp-for="PermanentAddress.Country" data-type="country" data-selectedValue="@Model.PermanentAddress.Country"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h5>
                        Guardians
                    </h5>

                    @for (int i = 0; i < Model.Guardians.Count; i++)
                    {

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                        </div>
                                        <input type="text" class="form-control" asp-for="@Model.Guardians[i].FirstName" placeholder="First Name" data-type="toupper">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" class="form-control" asp-for="@Model.Guardians[i].MiddleName" placeholder="Middle Name" data-type="toupper">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" class="form-control" asp-for="@Model.Guardians[i].LastName" placeholder="Last Name" data-type="toupper">
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-at"></i></span>
                                        </div>
                                        <input type="text" class="form-control" asp-for="@Model.Guardians[i].Email" data-type="email">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                        </div>
                                        <input type="text" class="form-control" asp-for="@Model.Guardians[i].Phone" data-type="phone">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-mobile"></i></span>
                                        </div>
                                        <input type="text" class="form-control" asp-for="@Model.Guardians[i].Mobile" data-type="mobile">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" formaction="editdata" value="edit" data-type="confirm">Update</button>
                    <button type="submit" class="btn btn-danger" formaction="deletedata" value="delete" data-type="confirm">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
